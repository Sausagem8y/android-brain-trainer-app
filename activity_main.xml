<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/goButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#03A9F4"
        android:onClick="start"
        android:text="go!"
        android:textSize="48sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/timerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="19dp"
        android:background="#C3CD2F"
        android:padding="10dp"
        android:text="30S"
        android:textSize="38sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="19dp"
        android:background="#F834B0"
        android:padding="10dp"
        android:text="0/0"
        android:textSize="38sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:text="0+0"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/answer1Button"
        android:layout_width="181dp"
        android:layout_height="293dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#4CAF50"
        android:onClick="chooseAnswer"
        android:tag="0"
        android:text="14"
        android:textSize="40sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/answer3Button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/answer2Button"
        android:layout_width="181dp"
        android:layout_height="293dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#AE1717"
        android:onClick="chooseAnswer"
        android:tag="1"
        android:text="27"
        android:textSize="40sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/answer4Button"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/answer3Button"
        android:layout_width="181dp"
        android:layout_height="293dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="41dp"
        android:backgroundTint="#ED8400"
        android:onClick="chooseAnswer"
        android:tag="2"
        android:text="38"
        android:textSize="40sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/answer4Button"
        android:layout_width="181dp"
        android:layout_height="293dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="41dp"
        android:backgroundTint="#21A0DA"
        android:onClick="chooseAnswer"
        android:tag="3"
        android:text="42"
        android:textSize="40sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.Con